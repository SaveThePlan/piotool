<div class="content-box col-centered table-responsive">
  <h2><%= t('views.notes.index.title') %></h2>

  <div class="btn-group pull-right">
    <a href="<%= new_note_path %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-plus"></span> <%= t('views.notes.index.new_note') %>
    </a>
  </div>

  <%= paginate @notes %>
  <p class="pagination-total"><%= page_entries_info @notes %></p>

  <table class="table table-condensed table-striped table-hover tablesorter">
    <thead>
    <tr>
      <th><%= t('views.notes.index.title') %></th>
      <th><%= t('views.notes.index.contact') %></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @notes.each do |note| %>
        <tr>
          <td><%= link_to note.title, note %></td>
          <td>
            <% note.contacts.each do |contact| %>
                <%= "#{full_name(contact)}, " %>
            <% end %>
          </td>
          <td><%= actions_group edit_btn(edit_note_path(note)), delete_btn(note_path(note)) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @notes %>
  <p class="pagination-total"><%= page_entries_info @notes %></p>
</div>
