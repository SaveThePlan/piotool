<%= simple_form_for(@note) do |f| %>

    <div class="form-inputs">
      <%= f.input :title %>

      <% if action_name == 'new_for_contact' %>
          <input type="hidden" name="note[contact_id]" value="<%= @contact_id %>"/>
      <% end %>

      <%= f.input :content, input_html: {rows: 8} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
