<h1>Listing Contacts Companies</h1>

<table>
  <thead>
    <tr>
      <th>Siret</th>
      <th>Tva</th>
      <th>Employees count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts_companies.each do |contacts_company| %>
      <tr>
        <td><%= contacts_company.siret %></td>
        <td><%= contacts_company.tva %></td>
        <td><%= contacts_company.employees_count %></td>
        <td><%= link_to 'Show', contacts_company %></td>
        <td><%= link_to 'Edit', edit_contacts_company_path(contacts_company) %></td>
        <td><%= link_to 'Destroy', contacts_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

