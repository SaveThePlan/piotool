<%= simple_form_for(@contact) do |f| %>
    <div class="row">

      <div class="form-inputs col-sm-6">
        <%= f.input :name %>
        <%= f.input :first_name %>
        <%= f.input :activity %>
        <%= f.input :email %>
        <%= f.input :address %>
        <%= f.input :phone %>
        <%= f.input :website %>
        <%= f.input :mobile %>
        <%= f.input :job %>
        <%= f.input :notefield %>
      </div>

      <div class="subform col-sm-6">
        <%= f.input :company_id, collection: @companies, include_blank: 'new company' %>

        <div class="form-inputs" id="company_subform">
          <%= simple_fields_for(@company) do |fc| %>
              <%= fc.input :name %>
              <%= fc.input :activity %>
              <%= fc.input :email %>
              <%= fc.input :address %>
              <%= fc.input :phone %>
              <%= fc.input :website %>
              <%= fc.input :siret %>
              <%= fc.input :tva %>
              <%= fc.input :employees_count %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>

<% if @contact.company %>
    <script> $('#company_subform').hide();</script>
<% end %>
