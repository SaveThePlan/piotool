<%= simple_form_for(@contact) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :first_name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :website %>
    <%= f.input :mobile %>
    <%= f.input :job %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
