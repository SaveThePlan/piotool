<div class="content-box col-centered">
  <h2>Contacts</h2>

  <%= paginate @contacts %>
  <p class="pagination-total"><%= page_entries_info @contacts %></p>

  <div class="btn-group pull-right">
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <span class="glyphicon glyphicon-plus"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'new Person', new_contacts_person_path %></li>
      <li><%= link_to 'new Company', new_contacts_company_path %></li>
    </ul>
  </div>


  <table class="table tablesorter">
    <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @contacts.each do |contact| %>
        <tr>
          <td><%= link_to full_name(contact), contact %></td>
          <td><%= contact.email %></td>
          <td><%= actions_group delete_btn(url_for(contact)) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @contacts %>
  <p class="pagination-total"><%= page_entries_info @contacts %></p>

</div>
