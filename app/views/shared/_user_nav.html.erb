<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <span class="username"><%= current_user.email %></span>
    <span class="caret"></span>
  </a>

  <ul class="dropdown-menu">
    <% if session.key?(:act_as) %>
        <li><%= link_to t('views.shared._user_nav.myself'), myself_again_users_path, method: :delete %></li>
    <% elsif current_user.has_role? :admin %>
        <li><%= link_to t('views.shared._user_nav.users'), users_path %></li>
    <% end %>

    <li><%= link_to t('views.shared._user_nav.my_account'), edit_user_registration_path %></li>
    <li><%= link_to t('views.shared._user_nav.log_out'), destroy_user_session_path, method: :delete %></li>
  </ul>
</li>
