<div class="col-sm-4 col-sm-offset-4">
  <div class="login-form col-centered">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-vertical'}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: 'email' %>
          <%= f.input :password, required: false, class: "form-control", placeholder: 'password' %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <hr/>

        <div class="form-actions">
          <%= f.button :submit, 'Log in', class: "btn btn-success" %>
        </div>
    <% end %>
    <p class="text-center">
      <%= render "devise/shared/links" %>
    </p>

  </div>
</div>
