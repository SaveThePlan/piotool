<div class="col-sm-4 col-sm-offset-4">
  <div class="login-form col-centered">
    <h2><%= t('views.devise.registrations.new.title') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-vertical'}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, placeholder: 'email' %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), placeholder:'password' %>
          <%= f.input :password_confirmation, required: true, placeholder:'password' %>
        </div>
        <hr/>

        <div class="form-actions">
          <%= f.button :submit, t('views.devise.registrations.new.submit'), class: "btn btn-success" %>
        </div>
    <% end %>
    <p class="text-center">
      <%= render "devise/shared/links" %>
    </p>

  </div>
</div>
