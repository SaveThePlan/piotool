<div class="content-box col-centered">
  <h2><%= @favorite.title %></h2>

  <p>
    <strong><%= t('views.favorites.show.title') %>:</strong>
    <%= @favorite.title %>
  </p>

  <p>
    <strong><%= t('views.favorites.show.content') %>:</strong>
    <%= @favorite.content %>
  </p>

  <p>
    <strong><%= t('views.favorites.show.url') %>:</strong>
    <%= @favorite.url %>
  </p>

  <%= link_to t('views.favorites.show.edit_link'), edit_favorite_path(@favorite) %> |
  <%= link_to t('views.favorites.show.back_list'), favorites_path %>
</div>
